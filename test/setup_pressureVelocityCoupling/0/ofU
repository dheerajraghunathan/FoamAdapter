FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    object      ofU;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (1 1 1);

boundaryField
{
    fixedWalls
    {
        // type            zeroGradient;
        // type               noSlip;
        type            fixedValue;
        value           uniform (1.0 0.0 0.0); // note 1.0 is interpreted as an int
    }

}


